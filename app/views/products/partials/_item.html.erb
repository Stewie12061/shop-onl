<div class="item d-sm-inline-block mb-2">
  <a href="<%= product_path(product.id) %>">
    <div class="card product-item">
      <div class="img">
        <img src="<%= product.image %>" class="card-img-top" alt="...">
      </div>
      <div class="card-body">
        <h5 class="card-title enable-show-more"><%= product.title %></h5>

        <p class="card-text enable-show-more more-line m96"><%= product.description %></p>

        <%= render partial: 'products/partials/price', locals:{ product: product} %>
        
        <p class="card-text"><%= product.category %></p>

        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </a>
</div>